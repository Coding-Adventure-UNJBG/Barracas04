#VRML V2.0 utf8

# INICIO DE MODELADO

# luz de ambiente
DirectionalLight {
	#ambientIntensity 10
	color 1 1 1
	intensity 10
	direction 0 -8 0
}

# suelo
Transform {	
	scale 5 5 5
	translation 0 -1.3 0								  
	children [
		Shape {
			geometry Box{ size 5 .1 5}
			appearance Appearance{
				material Material {diffuseColor 0.5, 0.24, 0.24 }
			}
		}
	]
}

#Punto de vista desde el punto de origen
Viewpoint {
	# position 0 1 0
	position 0 1 12
	orientation 0 0 0 0
	description "Punto de Vista Inicial"
}

PROTO Muro [
	field SFColor colorBase 1 1 0 # amarillo
	field SFVec3f posicion 0 0 0  # por defecto en el origen	
	field SFVec3f proporciones 1 1 0.1
]
{	  
	Transform {
		translation	IS posicion	children Shape {
			geometry Box { size IS proporciones}
			appearance Appearance { 
				material Material {
					diffuseColor IS colorBase	   
				}
				texture ImageTexture { url "Imagenes/tripley_01.jpg" }
			}
		}

	}
}


PROTO Pizarra [
	field SFVec3f posicion 0 0 0
	field SFColor colorMarco 0.9 0.9 0.85
]
{

	PROTO BarraVertical [
		field SFVec3f posicion 0 0 0 
		field SFColor colorMarco 0.9 0.9 0.85
	]
	{
		Transform {
			translation IS posicion	children Shape {
				geometry Box {size 0.1 2 0.1}
				appearance Appearance {
					material Material {
						diffuseColor  IS colorMarco
					}
				}
			}
		}
	}

	PROTO BarraHorizontal [
		field SFVec3f posicion 0 0 0 
		field SFColor colorMarco 0.9 0.9 0.85
	]
	{
		Transform {
			translation IS posicion	children Shape {
				geometry Box {size 3.7 0.1 0.1}
				appearance Appearance {
					material Material {
						diffuseColor  IS colorMarco
					}
				}
			}
		}
	}

	Transform {
		translation IS posicion
		children [
			Shape {
				geometry Box {size 3.5 2 0.005}
				appearance Appearance {
					texture	ImageTexture {
						url	"./pizarra.png"
					}
				}
			}

			BarraVertical {posicion -1.80 0 0 }
			BarraVertical {posicion 1.80 0 0 }

			BarraHorizontal	{posicion 0 1.05 0}
			BarraHorizontal	{posicion 0 -1.05 0}

		]
	}


}

# sillas
PROTO Mueble [
    field SFVec3f posicion 0 0 0
]
{
    PROTO Asiento [
        field SFVec3f posicion 0 0 0
        field SFVec3f tamaño 0.6 0.02 0.4
    ]
    {
        Transform {
            translation IS posicion
            children [
                Shape {
                    geometry Box { size IS tamaño }
                    appearance Appearance {
                        material Material {
                            diffuseColor 0.8 0.8 0.8  # Color gris para el asiento
                        }
                        texture ImageTexture { url "Imagenes/silla.jpeg" }  # Textura aplicada
                    }
                }
            ]
        }
    }

    PROTO Respaldo [
        field SFVec3f posicion 0 0 0
        field SFVec3f tamaño 0.6 0.02 0.3
    ] 
    {
        Transform {
            translation IS posicion
            rotation 1 0 0 1.57
            children [
                Shape {
                    geometry Box { size IS tamaño }
                    appearance Appearance {
                        material Material {
                            diffuseColor 0.8 0.8 0.8  # Color gris para el respaldo
                        }
                        texture ImageTexture { url "Imagenes/silla.jpeg" }  # Textura aplicada
                    }
                }
            ]
        }
    }

    PROTO Superficie [
        field SFVec3f posicion 0 0 0
        field SFVec3f tamaño 0.6 0.02 0.4
    ] 
    {
        Transform {
            translation IS posicion
            children [
                Shape {
                    geometry Box { size IS tamaño }
                    appearance Appearance {
                        material Material {
                            diffuseColor 0.8 0.8 0.8  # Color gris para la superficie
                        }
                    }
                }
            ]
        }
    }

    PROTO EstanteInferior [
        field SFVec3f posicion 0 0 0
        field SFVec3f tamaño 0.5 0.02 0.3
    ] 
    {
        Transform {
            translation IS posicion
            children [
                Shape {
                    geometry Box { size IS tamaño }
                    appearance Appearance {
                        material Material {
                            diffuseColor 0.8 0.8 0.8  # Color gris para el estante inferior
                        }
                    }
                }
            ]
        }
    }

    PROTO Pata [
        field SFVec3f posicion 0 0 0
        field SFFloat altura 0.8
        field SFFloat radio 0.02
        field SFRotation rotacion 0 0 0 0  # Rotación personalizada
    ] 
    {
        Transform {
            translation IS posicion
            rotation IS rotacion  # Aplicar la rotación
            children [
                Shape {
                    geometry Cylinder { height IS altura radius IS radio }
                    appearance Appearance {
                        material Material {
                            diffuseColor 0.5 0 0  # Color rojo oscuro para las patas
                        }
                    }
                }
            ]
        }
    }

    PROTO Conector [
        field SFVec3f posicion 0 0 0
        field SFFloat altura 0.7
        field SFFloat radio 0.02
        field SFRotation rotacion 0 0 0 0  # Rotación personalizada
    ] 
    {
        Transform {
            translation IS posicion
            rotation IS rotacion  # Aplicar la rotación
            children [
                Shape {
                    geometry Cylinder { height IS altura radius IS radio }
                    appearance Appearance {
                        material Material {
                            diffuseColor 0.5 0 0  # Color rojo oscuro para los conectores
                        }
                    }
                }
            ]
        }
    }

    Transform {
		scale 1.5 1.5 1.5
        translation IS posicion
        children [
            # Asiento
            Asiento { posicion 0 0.4 -0.7 tamaño 0.6 0.02 0.4 }

            # Respaldo
            Respaldo { posicion 0 0.7 -0.9 tamaño 0.6 0.02 0.3 }

            # Superficie del escritorio
            Superficie { posicion 0 0.7 -0.23 tamaño 0.6 0.02 0.4 }

            # Estante inferior del escritorio
            EstanteInferior { posicion 0 0.55 -0.26 tamaño 0.5 0.02 0.3 }

            # Patas metálicas con rotación
            Pata { posicion -0.3 0.2 -0.5 altura 0.42 radio 0.02 rotacion 0 0 1 0 }
            Pata { posicion -0.3 0.4 -0.9 altura 0.8 radio 0.02 rotacion 0 0 1 0 }
            Pata { posicion 0.3 0.2 -0.5 altura 0.42 radio 0.02 rotacion 0 0 1 0 }
            Pata { posicion 0.3 0.4 -0.9 altura 0.8 radio 0.02 rotacion 0 0 1 0 }

            # Conectores metálicos con rotación
            Conector { posicion -0.3 0.35 -0.2 altura 0.7 radio 0.02 rotacion 0 0 0 1.57 }
            Conector { posicion 0.3 0.35 -0.2 altura 0.7 radio 0.02 rotacion 0 0 0 1.57 }
            Conector { posicion -0.3 0 -0.5 altura 0.9 radio 0.02 rotacion 1 0 0 1.57 }
            Conector { posicion 0.3 0 -0.5 altura 0.9 radio 0.02 rotacion 1 0 0 1.57 }
            Conector { posicion 0 0 -0.9 altura 0.6 radio 0.02 rotacion 0 0 1 1.57 }
            Conector { posicion 0 0 -0.2 altura 0.6 radio 0.02 rotacion 0 0 1 1.57 }
        ]
    }
}



			   


