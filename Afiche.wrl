#VRML V2.0 utf8

PROTO Afiche [
	field SFVec3f posicion 0 0 0
	field SFVec3f escala 1 1 1
	exposedField MFString ruta []
]
{
	Transform	{
		translation	IS posicion
		scale IS escala
		children [
			Shape {
				geometry Box { size 1 1 0.001 }
				appearance Appearance {
					material Material { diffuseColor 1 1 1 }
					texture	ImageTexture { url IS ruta }
				}

			}
		]
	}
}

Afiche { escala 0.5 0.8 1 ruta "./imagenes/postmaster.jpg"}
